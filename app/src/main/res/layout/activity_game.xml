<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="40.0dip"
        android:background="#70000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="25.0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                ads:srcCompat="@drawable/ic_star_white_24dp" />

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingLeft="7.0dip"
                android:text="0"
                android:textColor="#ffffffff" />
        </LinearLayout>

        <com.soha.hangman.CustomViews.CustomTextView
            android:id="@+id/tvCategory"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="50.0"
            android:gravity="center_horizontal"
            android:tag="2"
            android:textColor="#ffffffff"
            android:textSize="24.0sp" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="25.0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:paddingRight="7.0dip"
                android:text="0"
                android:textColor="#ffffffff" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:adjustViewBounds="true"
                ads:srcCompat="@mipmap/ic_schedule_white_24dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttons_layout"
        android:layout_below="@id/linearLayout"
       >

        <ImageView
            android:id="@+id/ivHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/h02_7" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BF15454d" />

        <ImageView
            android:id="@+id/ivHangman"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/buttons_layout"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
      android:gravity="center_vertical"
        android:layout_above="@id/tvWord">

        <com.soha.hangman.CustomViews.CustomButton
            android:id="@+id/bHint"
            android:layout_width="80.0dip"
            android:layout_height="30dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/hint"
            android:text="@string/hint"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:tag="1"
            android:textSize="14.0dp" />

        <com.soha.hangman.CustomViews.CustomButton
            android:id="@+id/bTranslate"
            android:layout_width="74dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/hint"
            android:text="@string/translate"
            android:textStyle="bold"
            android:tag="1"
            android:visibility="gone"
            android:textColor="@android:color/black"
            android:textSize="14.0dp" />
    </RelativeLayout>

    <com.soha.hangman.CustomViews.CustomTextView
        android:id="@+id/tvWord"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/keyboard"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:minHeight="60.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:tag="1"
        android:text="GUESS\nWORD"
        android:textColor="#ffffffff"
        android:textSize="24.0sp" />


    <RelativeLayout
        android:id="@+id/keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:id="@+id/en_keyboard"-->
        <!--android:visibility="gone"-->
        <!--android:layout_height="wrap_content">-->
        <!--<include layout="@layout/keyboard"/>-->
        <!--</LinearLayout>-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <include

                layout="@layout/keyboard_fa" />
        </LinearLayout>
    </RelativeLayout>
    <!--<com.google.android.gms.ads.AdView-->
    <!--android:id="@+id/adView"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginBottom="5.0dip"-->
    <!--ads:adSize="BANNER"-->
    <!--ads:adUnitId="@string/banner_ad_game" />-->
</RelativeLayout>