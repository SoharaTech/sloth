<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <com.soharash.hangman.CustomViews.CustomTextView
        android:id="@+id/tvLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30.0dip"
        android:text="@string/hangman"
        android:tag="2"
        android:textColor="#ffffffff"
        android:textSize="70.0sp" />

    <ImageButton
        android:id="@+id/ibClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#00ffffff"
        android:padding="9.0dip"
        android:visibility="invisible"
        app:srcCompat="@mipmap/ic_close_white_36dp" />

    <ImageButton
        android:id="@+id/ibSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#00ffffff"
        android:padding="15.0dip"
        app:srcCompat="@mipmap/ic_music_note_white_24dp" />

    <LinearLayout
        android:layout_width="230.0dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/category_layout"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.soharash.hangman.CustomViews.CustomTextView
            android:id="@+id/tvCategories"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1.0"
            android:tag="2"
            android:gravity="center_horizontal"
            android:text="@string/choose_category"
            android:textColor="#ffffffff"
            android:textSize="22.0sp" />

        <com.soharash.hangman.CustomViews.CustomButton
            android:id="@+id/bCategories"
            android:tag="2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/button_round"
            android:text="Button"
            android:textColor="@android:color/black"
            android:textSize="22.0sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="230.0dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:orientation="vertical">

        <com.soharash.hangman.CustomViews.CustomTextView
            android:id="@+id/tvLanguage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:layout_weight="1.0"
            android:tag="2"
            android:gravity="center_horizontal"
            android:text="@string/choose_language"
            android:textColor="#ffffffff"
            android:textSize="25.0sp" />

        <com.soharash.hangman.CustomViews.CustomButton
            android:id="@+id/bLanguage"
            android:tag="2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/keyboard_on"
            android:textSize="25.0sp" />

    </LinearLayout>
    <com.soharash.hangman.CustomViews.CustomButton
        android:id="@+id/bStart"
        android:tag="2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20.0dip"
        android:background="@drawable/button_round"
        android:text="@string/start_game"
        android:textSize="32.0dip" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.soharash.hangman.CustomViews.CustomButton
            android:tag="2"
            android:id="@+id/bMultiplayer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/keyboard_on"
            android:text="2 PLAYERS"
            android:textSize="25.0sp" />

        <com.soharash.hangman.CustomViews.CustomButton
            android:tag="2"
            android:id="@+id/bSettings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/keyboard_on"
            android:text="SETTINGS"
            android:textSize="25.0sp" />
    </LinearLayout>
</RelativeLayout>